{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{#tag}}
<div class="page-head">
	<div class="tag-list-cover {{#if feature_image}}is-cover" style="background-image: url({{feature_image}}){{/if}}">
		<div class="page-head-description">
			<h1 class="page-head-title">{{name}}</h1>
		{{#if description}}
			<h2>{{description}}</h2>
		{{/if}}
		</div>
	</div>
</div>
{{/tag}}


<div class="tag-template post-feed">
{{#foreach posts}}
{{#has tag="ral"}}
 {{>"color-filter"}}
{{/has}}
    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    {{> "post-card"}}

{{/foreach}}

</div>
