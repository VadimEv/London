{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#is "home"}}
    {{#if @site.description}}
    <header class="page-head">
        <h2 class="page-head-title">{{@site.description}}</h2>
    </header>
    {{/if}}
{{/is}}
<div class="post-feed" id="index-custom">
	{{>"color-pallete"}}
</div>
{{#post}}

<div class="post-content-body">
        {{content}}
</div>
{{/post}}
<div class="index-news-container">
      <div class="index-news-post">
      {{#get "posts" order="published_at desc" limit="3" include="tags,authors" filter="tag:novosti"}}
          {{#foreach posts}}
              {{> "front-post"}}
          {{/foreach}}
      {{/get}}
      </div>
      <div class="glider-next">
      	<span class="next"></span>
      </div>
      <div class="glider-prev">
      	<span class="prev"></span>
      </div>
       <div role="tablist" class="dots"></div>

</div>


